<h2> Index page </h2>



  <% @products.each do |product| %>
    <br>
    <section class="product">
      <p> Name: <%= product.name %> </p>
      <p> Description: <%= product.description %> </p>
      <p> Price: <%= product.price_in_dollars %> </p>
      <p> <%= link_to 'View', product_path(product) %> </p>

    </section>

  <% end %>
